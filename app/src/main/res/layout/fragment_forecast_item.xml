<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#444444"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:text=""
        android:textColor="@android:color/white"
        tools:targetApi="lollipop"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSizeWave"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:text=""
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tvPeriod"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:text=""
                    tools:ignore="RtlSymmetry"/>

                <ImageView
                    android:id="@+id/ivCompass"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_compass_20dp"
                    android:contentDescription="@string/desc_iv_compass"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tvWind"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:text=""
                    tools:ignore="RtlSymmetry"/>

                <ImageView
                    android:id="@+id/ivWind"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_arrow_20dp"
                    tools:ignore="VectorDrawableCompat"
                    android:contentDescription="@string/desc_iv_compass" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivStar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_20dp_white"
                    android:contentDescription="@string/desc_iv_star"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/ivStar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_20dp_white"
                    android:contentDescription="@string/desc_iv_star"
                    tools:ignore="VectorDrawableCompat"/>

                <ImageView
                    android:id="@+id/ivStar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_20dp_white"
                    android:contentDescription="@string/desc_iv_star"
                    tools:ignore="VectorDrawableCompat"/>

                <ImageView
                    android:id="@+id/ivStar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_20dp_white"
                    android:contentDescription="@string/desc_iv_star"
                    tools:ignore="VectorDrawableCompat"/>

                <ImageView
                    android:id="@+id/ivStar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_20dp_white"
                    android:contentDescription="@string/desc_iv_star"
                    tools:ignore="VectorDrawableCompat"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvProbability"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text=""
            android:background="#FFFFFF"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

</LinearLayout>
